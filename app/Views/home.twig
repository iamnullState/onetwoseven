{% extends "layouts/base.twig" %}

{% set title = "127.0.0.1" %}

{% block content %}
  <div class="text-center">
    <h1 class="display-4 fw-bold">{{ appName }}</h1>
    <p class="lead text-secondary">Environment: <strong>{{ env }}</strong></p>

    

    <p class="mt-3 small text-secondary">
      PHP {{ phpver }}{% if server %} | {{ server }} | 127 v {{ ver }} {% endif %} 
    </p>

    <div class="mt-4">
      <a href="/api/v1/health" class="btn btn-outline-light btn-sm">API Health</a>
    </div>
  </div>
{% endblock %}